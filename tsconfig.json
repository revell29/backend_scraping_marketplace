{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@database/*": ["src/database/*"],
      "@modules/*": ["src/app/modules/*"],
      "@repository/*": ["src/app/repository/*"],
      "@route/*": ["src/routes/*"],
      "@utils/*": ["src/server/utils/*"],
      "@helpers/*": ["src/app/helpers/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.js"]
}
