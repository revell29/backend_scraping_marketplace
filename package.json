{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "dev": "cross-env NODE_ENV=development && nodemon -r tsconfig-paths/register ./src/index.ts",
    "build": "cross-env NODE_ENV=production tsc && ef-tspm",
    "serve:local": "cross-env NODE_ENV=production node ./build/index.js",
    "production": "NODE_ENV=production pm2 start ./build"
  },
  "dependencies": {
    "@hapi/hapi": "^20.0.1",
    "bcrypt": "^5.0.0",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "hapi-auth-jwt2": "^10.2.0",
    "hapi-cors": "^1.0.3",
    "isomorphic-unfetch": "^3.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "module-alias": "^2.2.2",
    "mongoose": "^5.10.11",
    "typescript": "^4.0.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/node": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/bcrypt": "^3.0.0",
    "@types/hapi__hapi": "^20.0.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.164",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.14.6",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.6",
    "tsconfig-paths": "^3.9.0"
  },
  "_moduleAliases": {
    "@modules/*": "./build/app/modules/*",
    "@routes/*": "./build/routes/*",
    "@repository/*": "./build/app/repository/*",
    "@utils/*": "./build/server/utils/*",
    "@helpers/*": "./build/app/helpers/*"
  }
}
